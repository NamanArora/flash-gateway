# Database Configuration
# These should match your PostgreSQL container settings
PGHOST=postgres
PGPORT=5432
PGDATABASE=gateway
PGUSER=gateway
PGPASSWORD=gateway_pass

# Set to true if using SSL connection to database
PGSSL=false

# API Server Configuration
API_PORT=4000

# Frontend Development Server Configuration
VITE_PORT=5173

# Node Environment
# Set to 'production' for optimized builds
NODE_ENV=development

# Optional: Enable debug logging
DEBUG=false